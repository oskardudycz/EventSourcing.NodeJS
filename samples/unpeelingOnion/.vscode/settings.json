{
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": false,
  "editor.formatOnSave": true,

  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  "editor.tabSize": 2,

  "files.exclude": {
    "node_modules/": true,
    "dist/": true
  },
  "files.eol": "\n",
  "debug.javascript.autoAttachFilter": "disabled",
  "search.exclude": {
    "**/.git": true,
    "**/node_modules": true
  }
}
